set default-fg                  \#D8DEE9

set statusbar-fg                \#ECEFF4
set statusbar-bg                \#2E3440

set inputbar-bg                 \#3B4252
set inputbar-fg                 \#ECEFF4

set notification-error-bg       \#3B4252
set notification-error-fg       \#BF616A

set notification-warning-bg     \#3B4252
set notification-warning-fg     \#2E3440

set highlight-color             \#3B4252
set highlight-active-color      \#ECEFF4

set completion-highlight-fg     \#E5E9F0
set completion-highlight-bg     \#3B4252

set completion-bg               \#4C566A
set completion-fg               \#D8DEE9

set notification-bg             \#3B4252
set notification-fg             \#2E3440

set recolor-lightcolor          \#2E3440
set recolor-darkcolor           \#D8DEE9
set recolor			"true"

# setting recolor-keep true will keep any color your pdf has.
# if it is false, it'll just be black and white
set recolor-keephue "false"

# Disable statusbar. Default is "s"
set guioptions ""

# Show a tilde instead of the full home path
set statusbar-home-tilde "true"
