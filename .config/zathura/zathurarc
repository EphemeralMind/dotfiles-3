set default-bg                  \#1d1f21
set default-fg                  \#c5c8c6

set statusbar-fg                \#ffffff
set statusbar-bg                \#1d1f21

set inputbar-bg                 \#1d1f21
set inputbar-fg                 \#ffffff

set notification-error-bg       \#1d1f21
set notification-error-fg       \#cc6666

set notification-warning-bg     \#1d1f21
set notification-warning-fg     \#1d1f21

set highlight-color             \#1d1f21
set highlight-active-color      \#ffffff

set completion-highlight-fg     \#c5c8c6
set completion-highlight-bg     \#1d1f21

set completion-bg               \#969896
set completion-fg               \#c5c8c6

set notification-bg             \#1d1f21
set notification-fg             \#1d1f21

set recolor-lightcolor          \#1d1f21
set recolor-darkcolor           \#c5c8c6
set recolor			"true"

# setting recolor-keep true will keep any color your pdf has.
# if it is false, it'll just be black and white
set recolor-keephue "false"

# Disable statusbar. Default is "s"
set guioptions ""

# Show a tilde instead of the full home path
set statusbar-home-tilde "true"
