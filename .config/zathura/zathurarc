# Enable the recolor option to recolor PDFs
set recolor "true"

# Disable statusbar. Default is "s"
set guioptions ""

# Show a tilde instead of the full home path
set statusbar-home-tilde "true"

set completion-bg            \#282a2e
set completion-fg            \#c5c8c6
set completion-group-bg      \#1d1f21
set completion-group-fg      \#c5c8c6
set completion-highlight-bg  \#b5bd68
set completion-highlight-fg  \#282a2e
set default-bg               \#1d1f21
set default-fg               \#c5c8c6
set highlight-active-color   \#b5bd68
set highlight-color          \#b5bd68
set index-active-bg          \#b5bd68
set index-active-fg          \#282a2e
set index-bg                 \#282a2e
set index-fg                 \#c5c8c6
set inputbar-bg              \#1d1f21
set inputbar-fg              \#b5bd68
set notification-bg          \#ffffff
set notification-error-bg    \#ffffff
set notification-error-fg    \#cc6666
set notification-fg          \#1d1f21
set notification-warning-bg  \#ffffff
set notification-warning-fg  \#f0c674
set recolor-darkcolor        \#ffffff
set recolor-lightcolor       \#1d1f21
set render-loading-bg        \#ffffff
set render-loading-fg        \#1d1f21
set statusbar-bg             \#1d1f21
set statusbar-fg             \#ffffff
set tabbar-bg                \#1d1f21
set tabbar-focus-bg          \#1d1f21
