#!/bin/bash
#
# ~/.aliases
#
# Add the following snippet to .bashrc or .zshrc
#
#	[ -f "$HOME/.aliases" ] && . $HOME/.aliases

# Default bash aliases
alias ls='ls --color=auto'
alias grep='grep --color=auto'

# dotfiles
alias dots='git --git-dir=$HOME/.dots.git/ --work-tree=$HOME'

# vim
alias vimrc='vim $HOME/.vimrc'

# pacman
alias pacorph='pacaur -Rns $(pacaur -Qtdq)'
alias pacls='pacaur -Q | wc -l'
alias pacalone='comm -23 <(pacman -Qqt | sort) <(pacman -Sqg base base-devel | sort)'
