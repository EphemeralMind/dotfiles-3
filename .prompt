#!/bin/sh

parse_git_branch() {
	git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
}

privilege_indicator() {
	if [ "$(id -u)" -eq 0 ]
	then
		tput setaf 9
		echo "#"
	else
		echo "$"
	fi
}

export PS1="\u \[\033[32m\]\W\[\033[33m\]\$(parse_git_branch)\[\033[00m\] \$(privilege_indicator) \$(tput sgr0)"
